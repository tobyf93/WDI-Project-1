<h1>New User</h1>
<%= form_for @user do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username, :autofocus => true %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit %>
<% end %>
