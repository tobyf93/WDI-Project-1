<div id="discover" class="row">

  <!-- First Half -->
  <div class="col-md-6">
    <div class="container-fluid">

      <!-- File List -->
      <div id="fileList" class="row">
        <% if @items.present? %>
        <!-- class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal" -->
          <%= button_to '+', '#', :method => :get, :class => 'btn btn-lg btn-success', :data => {:toggle => 'modal', :target => '#myModal'} %>
          <div class="list-group">
            <% @items.reverse_each do |item|%>
              <a href="#" class="list-group-item" data-cl="<%= item.cl_id %>"><%= item.name %></a>
            <% end %>
          </div>
        <% else %>
          <div id="message">
            <h1>Hmmmmmm...</h1>
            <h3>No Users Have Uploaded Files Here</h3>
            <%= link_to 'Be The First!', new_item_path, :class => 'btn btn-success btn-lg' %>
          </div>
        <% end %>
      </div>

      <!-- Google Map -->
      <div class="row">
        <div class="col-md-12">
          <div id="mapCanvas"></div>
        </div>
      </div>

    </div>
  </div>

  <!-- Second Half - File Preview-->
  <div class="col-md-6">
    <div id="filePreview"class="container-fluid well">
      <%= image_tag('usb.png') %>
    </div>
  </div>








  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="myModalLabel">Create New Item</h4>
        </div>

        <%= form_tag({:controller => :items, :action => :create}, {:multipart => true}) do %>
        <div class="modal-body">
          
          <%= text_field_tag :file_name, nil, :class => 'form-control', :placeholder => 'Human Friendly File Name' %>
          <div class="input-group">
              <span class="input-group-btn">
                  <span class="btn btn-primary btn-file">
                      Browseâ€¦ <input id="fileUpload" name="file" type="file">
                  </span>
              </span>
              <input type="text" id="fileName" class="form-control" readonly="">
          </div>

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <!-- <button type="button" class="btn btn-primary">Add</button> -->
          <%= submit_tag 'Add', :class => 'btn btn-success' %>
        </div>
        <% end %>
      </div>
    </div>
  </div>

</div>





